<div class="col">
	<a href="/item/<%=itemId%>" class="item-card-link">
		<div class="card h-200">
			<img
				src="<%=itemImageUrl%>"
				class="card-img-top"
				width="100px"
				height="100px"
				alt="..."
			/>
			<div class="card-body">
				<h5 class="card-title"><%=itemName%></h5>
				<h5 class="card-title">Rs. : <%=itemPrice%> only</h5>
				<p class="card-text">
					<%=itemDescription.substring(0,200)%> ...
				</p>
			</div>
		</div>
	</a>
</div>
